<?xml version="1.0"?>
<!DOCTYPE digester-rules PUBLIC
        "-//Apache Commons //DTD digester-rules XML V1.0//EN"
        "http://commons.apache.org/digester/dtds/digester-rules-3.0.dtd">
<digester-rules>
    <pattern value="Scenario">
        <object-create-rule classname="com.kong.common.model.CaseScenario"/>
        <set-properties-rule>
            <alias attr-name="name" prop-name="name"></alias>
        </set-properties-rule>
    </pattern>
    <pattern value="Scenario/PageInfo">
        <object-create-rule classname="com.kong.common.model.PageInfo"/>
        <set-properties-rule>
            <alias attr-name="name" prop-name="name"></alias>
            <alias attr-name="classpath" prop-name="classpath"></alias>
        </set-properties-rule>

        <set-next-rule methodname="addPage"></set-next-rule>

    </pattern>
    <pattern value="Scenario/StepInfo">
        <object-create-rule classname="com.kong.common.model.StepInfo"/>
        <set-properties-rule>
            <alias attr-name="name" prop-name="name"></alias>
            <alias attr-name="refInstance" prop-name="refInstance"></alias>
            <alias attr-name="method" prop-name="method"></alias>
            <alias attr-name="params" prop-name="params"></alias>
        </set-properties-rule>

        <set-next-rule methodname="addStep"></set-next-rule>

    </pattern>
</digester-rules>
